{
  "compilerOptions": {
    "target": "ESNext",
    "incremental": true,
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@utils": [
        "src/utils/index.ts"
      ],
      "@ui": [
        "src/ui/index.ts"
      ],
      "@features": [
        "src/features/index.ts"
      ],
      "@data": [
        "src/data/index.ts"
      ],
      "@router": [
        "src/router/index.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}